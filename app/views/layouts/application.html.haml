!!!
%html
  %head
    %title ChatworkGcalTask
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    #header.navbar.navbar-default{:role => "navigation"}
      .container
        .navbar-header
          %a.navbar-brand{:href => "/"} ChatworkGcalTask
        #navbar-main
          %ul.nav.navbar-nav.navbar-right
            - if user_signed_in?
              %li.dropdown
                = link_to current_user.name, '#', {id: 'profile', class: 'dropdown-toggle', 'data-toggle' => 'dropdown'}
                %ul.dropdown-menu{'aria-labelledby' => 'profile'}
                  %li= link_to "Log out", destroy_user_session_path, method: :delete
            - else
              %li= link_to "Log in with Google", user_omniauth_authorize_path(:google_oauth2)

    .container
      .row.row-offcanvas
        .col-sm-12
          #content
            = content_for?(:content) ? yield(:content) : yield
